<h1 class = "index-title">トップページ</h1>
<div>
  <%= link_to '投稿する', new_item_path %>
</div>

<% @items.each do |item| %>
<div>
  <%= link_to '編集する', edit_item_path(item.id) %>
</div>
<div>
  <%= link_to item.title, item_path(item.id) %>
</div>
<div>
  <%= image_tag  item.image, size: '300x400' %>
</div>
<div>
  <%= item.concept %>
</div>
<% end %>